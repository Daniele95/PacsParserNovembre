<Window x:Class="Explorer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Explorer"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="searchBox" HorizontalAlignment="Left" Height="23" Margin="132,53,0,0" TextWrapping="Wrap" Text="Type your search" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="searchButton" Content="Search" HorizontalAlignment="Left" Margin="293,53,0,0" VerticalAlignment="Top" Width="75" RenderTransformOrigin="0.086,-0.662" Click="onSearchButtonClicked"/>

    </Grid>
</Window>
